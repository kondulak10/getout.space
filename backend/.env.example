# Server
NODE_ENV=development
PORT=4000

# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/getout?retryWrites=true&w=majority

# Strava API
STRAVA_CLIENT_ID=your_client_id
STRAVA_CLIENT_SECRET=your_client_secret
STRAVA_WEBHOOK_VERIFY_TOKEN=your_random_verify_token

# Security - CRITICAL: Generate strong random keys!
# Generate JWT_SECRET with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Generate ENCRYPTION_KEY with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=REPLACE_WITH_RANDOM_64_CHAR_HEX_STRING
ENCRYPTION_KEY=REPLACE_WITH_RANDOM_64_CHAR_HEX_STRING

# URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:4000

# AWS (for production)
AWS_REGION=eu-north-1

# Mapbox (for geocoding user locations during registration)
MAPBOX_TOKEN=your_mapbox_access_token_here

# Slack Notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
